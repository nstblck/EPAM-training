<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout>
            <Pattern>%d %p %c{2} [%t] %1 %m%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File" fileName="application-${date:yyyyMMdd}.log">
            <PatternLayout>
            <Pattern>%d %p %c{2} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>